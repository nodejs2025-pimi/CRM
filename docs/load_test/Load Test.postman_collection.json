		{
			"name": "Create Establishment",
			"event": [
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							"// Create ukrainianNumber\r",
							"const operators = ['96', '97', '98', '50', '99', '63', '73'];\r",
							"const randomOperator = operators[Math.floor(Math.random() * operators.length)];\r",
							"\r",
							"let remainingDigits = '';\r",
							"for (let i = 0; i < 7; i++) {\r",
							"    remainingDigits += Math.floor(Math.random() * 10);\r",
							"}\r",
							"\r",
							"const ukrainianNumber = \"+380\" + randomOperator + remainingDigits;\r",
							"\r",
							"pm.collectionVariables.set(\"ukrainianPhone\", ukrainianNumber);\r",
							"\r",
							"// Create random lowercase email\r",
							"let randomName = pm.variables.replaceIn(\"{{$randomFirstName}}{{$randomLastName}}\");\r",
							"let domain = \"example.com\";\r",
							"let randomEmail = `${randomName.toLowerCase()}@${domain}`;\r",
							"\r",
							"pm.collectionVariables.set(\"randomEmailLowercase\", randomEmail);\r",
							""
						],
						"type": "text/javascript",
						"packages": {},
						"requests": {}
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [],
				"body": {
					"mode": "urlencoded",
					"urlencoded": [
						{
							"key": "type",
							"value": "shop",
							"type": "text"
						},
						{
							"key": "email",
							"value": "{{randomEmailLowercase}}",
							"type": "text"
						},
						{
							"key": "phone",
							"value": "{{ukrainianPhone}}",
							"type": "text"
						},
						{
							"key": "address",
							"value": "{{$randomStreetAddress}}",
							"type": "text"
						},
						{
