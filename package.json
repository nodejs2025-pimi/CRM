{
    "name": "monorepo-crm",
    "author": "nodejs2025-pimi",
    "private": true,
    "workspaces": [
        "apps/*",
        "libs/*"
    ],
    "scripts": {
        "prepare": "husky",
        "build": "npm run build:front & npm run build:back",
        "build:front": "npm --workspace=apps/frontend run build",
        "build:back": "npm --workspace=apps/backend run build",
        "start": "npm run start:front & npm run start:back",
        "start:front": "npm --workspace=apps/frontend run start",
        "start:back": "npm --workspace=apps/backend run start",
        "start:back:dev": "npm --workspace=apps/backend run start:dev",
        "start:front:dev": "npm --workspace=apps/frontend run start:dev",
        "test:front": "npm --workspace=apps/frontend run test",
        "test:back": "npm run test:back:unit & npm run test:back:e2e",
        "test:back:unit": "npm --workspace=apps/backend run test",
        "test:back:e2e": "npm --workspace=apps/backend run test:e2e",
        "lint": "npm run lint:back & npm run lint:front",
        "lint:back": "npm --workspace=apps/backend run lint",
        "lint:front": "npm --workspace=apps/frontend run lint",
        "format": "npm run format:back & npm run format:front",
        "format:back": "prettier --config ./.prettierrc --write \"apps/backend/{src,test}/**/*.ts\"",
        "format:front": "prettier --config apps/frontend/.prettierrc --write \"apps/frontend/src/**/*.{ts,html,css}\""
    },
    "dependencies": {
        "rxjs": "^7.8.1"
    },
    "devDependencies": {
        "@eslint/eslintrc": "^3.2.0",
        "@eslint/js": "^9.18.0",
        "@types/jest": "^29.5.14",
        "@types/node": "^22.10.7",
        "eslint": "^9.18.0",
        "eslint-config-prettier": "^10.0.1",
        "eslint-plugin-prettier": "^5.2.2",
        "husky": "^9.1.7",
        "jest": "^29.7.0",
        "prettier": "^3.4.2",
        "ts-jest": "^29.2.5",
        "typescript": "~5.8.2",
        "typescript-eslint": "8.40.0"
    }
}
